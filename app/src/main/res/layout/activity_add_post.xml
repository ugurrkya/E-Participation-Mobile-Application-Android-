<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/votee"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddPostActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeof"
        android:layout_gravity="end"
        android:text="01/01/2019 Monday"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:id="@+id/nameofuser"
        android:layout_marginTop="20dp"
        android:layout_marginRight="120dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/addpost_button"
        android:layout_width="120dp"
        android:layout_marginTop="-120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="#5dc1ca"
        android:text="Add Vote" />
    <EditText
        android:inputType="text"
        app:met_floatingLabel="normal"
        app:backgroundTint="#fff"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type title"
        android:textColor="#000"
        android:textColorHint="#000"
        android:id="@+id/titlename" />

    <Spinner
        android:id="@+id/dtlistname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:popupBackground="#a91414"
        android:scrollbarStyle="insideOverlay"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"></Spinner>

    <EditText
        android:scrollbars="vertical"
        android:id="@+id/postdescription"
        android:inputType="textMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your Reviews"
        android:maxLines="6"
        android:textAlignment="center"
        app:backgroundTint="#eff4f2"
        android:textColor="#000"
        android:textColorHint="#000"/>




</LinearLayout>