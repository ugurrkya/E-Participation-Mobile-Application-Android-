<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vote3"
    tools:context=".VoteDetailActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dtnameofuser"
            android:text="username will be here now"
            android:textColor="#ab5e42"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fortitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title is here"
            android:textColor="#000"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fordate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date will be here now"
            android:textColor="#000"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:textStyle="normal"
            android:textSize="17dp"/>



            <Button
                android:text="AGREE"
                android:textColor="#ca1212"
                android:id="@+id/yesbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />
        <Button
            android:text="DISAGREE"
            android:textColor="#ca1212"
            android:id="@+id/nobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#fff"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="100dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You voted this before."/>





    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fordescription"
            android:text="Description will be here."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop= "190dp"
            android:layout_marginLeft="0dp"
            android:scrollbars="vertical"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="18dp" />
    </LinearLayout>







</RelativeLayout>